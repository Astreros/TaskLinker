{% extends 'base.html.twig' %}

{% block title %}{{pageName}}{% endblock %}

{% block body %}
    <div id="content">
        {{ form_start(formTask) }}
            <div>{{ form_row(formTask.name) }}</div>
            <div>{{ form_row(formTask.description) }}</div>
            <div class="flex-form">
                <div>{{ form_row(formTask.startDate) }}</div>
                <div>
                    {{ form_row(formTask.status) }}
                </div>
            </div>
            <div>
                {{ form_row(formTask.employee) }}
            </div>
            <div>
                {{ form_row(formTask.project) }}
            </div>
            <br>
            <button class="button button-submit">Ajouter</button>
        {{ form_end(formTask) }}
    </div>
{% endblock %}