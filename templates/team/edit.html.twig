{% extends 'base.html.twig' %}

{% block title %}{{ pageName }}{% endblock %}

{% block body %}
    <div id="content">
        {{ form_start(formEmployee) }}
            <div>{{ form_row(formEmployee.firstName) }}</div>
            <div>{{ form_row(formEmployee.name) }}</div>
            <div>{{ form_row(formEmployee.email) }}</div>
            <div class="form-flex">
                <div>{{ form_row(formEmployee.joiningDate) }}</div>
                <div>{{ form_row(formEmployee.contractType) }}</div>
            </div>
            <div>{{ form_row(formEmployee.project) }}</div>
            <button class="button button-submit">Enregistrer</button>
        {{ form_end(formEmployee) }}
    </div>
{% endblock %}