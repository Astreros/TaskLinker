{% extends 'base.html.twig' %}

{% block title %}{{ pageName }}{% endblock %}

{% block body %}
    <div id="content">
        <div id="tasks-container">
{#            {{  }}#}
            <div class="task-column">
                <h2>To Do</h2>
                <div class="tasks-list">
                    {% for task in tasks %}
                        {% if task.status.id == '1' %}
                            <a class="task" href="{{ url('task.edit', {id: task.id}) }}">
                                <h3>{{ task.name }}</h3>
                                <p>{{ task.description }}</p>
                                <div class="task-infos">
                                    <div class="task-deadline">
                                        <i class="fa-regular fa-calendar"></i>{{ task.startDate|date('d-m-Y') }}
                                    </div>
                                    <div class="mini-user">
                                        {{ task.employee.name|slice(0,1)|capitalize }}{{ task.employee.firstName|slice(0,1)|capitalize }}
                                    </div>
                                </div>
                            </a>
                        {% endif %}
                    {% endfor %}
                    <a href="{{ url('task.create') }}" class="task-add">
                        + Ajouter une tâche
                    </a>
                </div>
            </div>
            <div class="task-column">
                <h2>Doing</h2>
                <div class="tasks-list">
                    {% for task in tasks %}
                        {% if task.status.id == '2' %}
                            <a class="task" href="{{ url('task.edit', {id: task.id}) }}">
                                <h3>{{ task.name }}</h3>
                                <p>{{ task.description }}</p>
                                <div class="task-infos">
                                    <div class="task-deadline">
                                        <i class="fa-regular fa-calendar"></i>{{ task.startDate|date('d-m-Y') }}
                                    </div>
                                    <div class="mini-user">
                                        {{ task.employee.name|slice(0,1)|capitalize }}{{ task.employee.firstName|slice(0,1)|capitalize }}
                                    </div>
                                </div>
                            </a>
                        {% endif %}
                    {% endfor %}
                    <a href="{{ url('task.create') }}" class="task-add">
                        + Ajouter une tâche
                    </a>
                </div>
            </div>
            <div class="task-column">
                <h2>Done</h2>
                <div class="tasks-list">
                    {% for task in tasks %}
                        {% if task.status.id == '3' %}
                            <a class="task" href="{{ url('task.edit', {id: task.id}) }}">
                                <h3>{{ task.name }}</h3>
                                <p>{{ task.description }}</p>
                                <div class="task-infos">
                                    <div class="task-deadline">
                                        <i class="fa-regular fa-calendar"></i>{{ task.startDate|date('d-m-Y') }}
                                    </div>
                                    <div class="mini-user">
                                        {{ task.employee.name|slice(0,1)|capitalize }}{{ task.employee.firstName|slice(0,1)|capitalize }}
                                    </div>
                                </div>
                            </a>
                        {% endif %}
                    {% endfor %}
                    <a href="{{ url('task.create') }}" class="task-add">
                        + Ajouter une tâche
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
