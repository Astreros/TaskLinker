{% extends 'base.html.twig' %}

{% block title %}{{pageName}}{% endblock %}

{% block body %}
{#    {% include 'partials/flash.html.twig' %}#}
    <div id="content">
        <table id="team-container">
            <thead>
            <tr>
                <th>Prénom, Nom</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for employee in employees %}
                <tr>
                    <td>
                        <div class="employee-infos">
                            <div class="employee-avatar">
                                {{ employee.name|slice(0,1)|capitalize }} {{ employee.firstName|slice(0,1)|capitalize }}
                            </div>
                            <div class="employee-coords">
                                <strong>{{ employee.name }} {{ employee.firstName }}</strong>
                                <span>{{ employee.email }}</span>
                            </div>
                        </div>
                    </td>
                    <td>{{ employee.contractType }}</td>
                    <td>
                        <a class="button button-edit-team" href="{{ url('team.edit', {id: employee.id}) }}">
                            Éditer
                        </a>
                        <a class="delete-team" href="#">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
