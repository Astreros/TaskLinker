{% extends 'base-auth.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Se connecter</h1>

    {% if error %}
        <div class="error-login">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email :</label>
        <input type="email" id="username" name="email" value="">

        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="password">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="button button-submit">Se connecter</button>
        <a href="{{ path('registration.show') }}" class="link-logout">Pas de compte ? S'inscrire</a>
    </form>
{% endblock %}
